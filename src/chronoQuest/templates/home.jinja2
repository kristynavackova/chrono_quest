<!doctype html>
<html lang="cs">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <style>
      :root{
        --glass-bg: rgba(255,255,255,.85);
        --glass-bd: rgba(255,255,255,.6);
        --shadow: 0 10px 30px rgba(0,0,0,.15);
      }
      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        margin: 2rem;
        min-height: 100vh;
        background-image: url('{{ request.static_url("chronoQuest:static/img/bg.webp") }}');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
      .container { max-width: 980px; margin: 0 auto; }

      /* top bar s tlačítky */
      .topbar {
        display:flex; align-items:center; justify-content:space-between;
        padding: .75rem 1rem;
        background: var(--glass-bg);
        border: 1px solid var(--glass-bd);
        border-radius: 16px;
        box-shadow: var(--shadow);
        backdrop-filter: blur(6px);
        margin-bottom: 1rem;
      }
      .brand {
        font-weight: 700;
        letter-spacing:.3px;
      }
      .actions { display:flex; gap:.5rem; }
      .btn {
        display:inline-block; padding:.55rem .9rem; border-radius:10px;
        text-decoration:none; border:1px solid #d0d7de; background:#fff;
        box-shadow: 0 1px 1px rgba(0,0,0,.04);
      }
      .btn.primary { border-color:#4f46e5; background:#4f46e5; color:#fff; }

      /* hero panel */
      .wrap {
        background: var(--glass-bg);
        border: 1px solid var(--glass-bd);
        border-radius: 20px;
        padding: 1.25rem 1.5rem;
        box-shadow: var(--shadow);
        backdrop-filter: blur(6px);
      }
      h1 {
        font-size: clamp(2.2rem, 4.5vw, 3.2rem);
        line-height: 1.1;
        margin: .25rem 0 .5rem 0;
        text-shadow: 0 1px 0 rgba(255,255,255,.6);
      }
      .muted { color: #4b5563; margin-bottom: 1rem; }

      .card {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        background: #fff;
        box-shadow: 0 1px 3px rgba(0,0,0,.06);
      }
      ul { padding-left: 1.25rem; margin:.5rem 0 0 0; }
      li { margin: .35rem 0; }
    </style>
  </head>
  <body>
    <div class="container">
      <header class="topbar">
        <div class="brand">ChronoQuest</div>
        <nav class="actions">
          <a class="btn" href="{{ request.route_url('login') }}">Přihlásit</a>
          <a class="btn primary" href="{{ request.route_url('signup') }}">Registrace</a>
        </nav>
      </header>

      <section class="wrap">
        <h1>{{ title }}</h1>
        <p class="muted">Zkušební landing pro vzdělávací aplikaci ChronoQuest (Pyramid + Jinja2).</p>

        <div class="card">
          <h2>Roční témata</h2>
          <ul>
            {% for t in themes %}
              <li><strong>{{ t.year }}</strong> — {{ t.name }}</li>
            {% endfor %}
          </ul>
        </div>
      </section>
    </div>
  </body>
</html>
